<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>helloCookie</servlet-name>
    <servlet-class>com.sang.cookieSeesion.__01_cookie_hello</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>helloSession</servlet-name>
    <servlet-class>com.sang.cookieSeesion.__02_session_hello</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>test</servlet-name>
    <servlet-class>com.sang.cookieSeesion.__03_test</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>invalidate</servlet-name>
    <servlet-class>com.sang.cookieSeesion.__04_session_invalidate</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>helloCookie</servlet-name>
    <url-pattern>/helloCookie</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>helloSession</servlet-name>
    <url-pattern>/helloSession</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>test</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>invalidate</servlet-name>
    <url-pattern>/invalidate</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>1</session-timeout><!--设置session 1 分钟不访问即过期-->
  </session-config>
</web-app>
